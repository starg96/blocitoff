<h1>New To-do Items</h1>

    <%= form_for [user, user.items.build], remote: true do |f| %>
      <h3>Add a item: </h3>
     <div class='form-group'>
     <%= f.label :Item %>
     <%= f.text_field :name, class: 'form-control', placeholder: 'Enter Item' %>
     </div>
     <div class="form-group">
     <%= f.submit "Create Item", class: 'btn btn-success' %>
   </div>
   <% end %>