<h1>New To-do Items</h1>

<div class="row">
  <div class="col-md-8">
    <%= form_for [user, user.items.build], remote: true do |f| %>
         <h3>Add a item: </h3>
     <%= f.label :name %>
     <%= f.text_area :name, class: 'form-control', placeholder: "Enter Item" %>
   <div class="form-group">
     <%= f.submit "Create Item", class: 'btn btn-success' %>
   </div>
   <% end %>
  </div>
</div>