<h1>To Do list</h1>

<div class="row">
  <div class="col-md-8">
    <% @items.each do |item| %>
      <div class="media">
        <div class="media-body">
          <small>
            <%= item.name %>
          </small>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
      <%= link_to "New Todo Item", new_item_path, class: 'btn btn-success' %>
  </div>
</div>